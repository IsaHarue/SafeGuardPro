<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza"
    tools:context=".view.TelaCadastro"
    >




    <TextView
        android:id="@+id/tvcadastro"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginTop="25dp"
        android:text="Cadastro de EPI"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/edtnome"
        android:layout_width="255dp"
        android:layout_height="45dp"
        android:background="@color/cinzaC"
        app:layout_constraintStart_toStartOf="@+id/tvnome"
        app:layout_constraintTop_toBottomOf="@+id/tvnome" />

    <TextView
        android:id="@+id/tvnome"
        android:layout_width="62dp"
        android:layout_height="28dp"
        android:layout_marginTop="30dp"
        android:text="Nome:"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@+id/tvcadastro"
        app:layout_constraintTop_toBottomOf="@+id/tvcadastro" />

    <EditText
        android:id="@+id/edtId"
        android:layout_width="255dp"
        android:layout_height="45dp"
        android:background="@color/cinzaC"
        app:layout_constraintStart_toStartOf="@+id/tvId"
        app:layout_constraintTop_toBottomOf="@+id/tvId" />

    <TextView
        android:id="@+id/tvId"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:text="ID do EPI:"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@+id/edtnome"
        app:layout_constraintTop_toBottomOf="@+id/edtnome" />


    <EditText
        android:id="@+id/edtfuncionalidade"
        android:layout_width="255dp"
        android:layout_height="100dp"
        android:background="@color/cinzaC"
        app:layout_constraintStart_toStartOf="@id/tvfuncionalide"
        app:layout_constraintTop_toBottomOf="@+id/tvfuncionalide" />

    <TextView
        android:id="@+id/tvfuncionalide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Funcionalidade:"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/edtId"
        app:layout_constraintTop_toBottomOf="@+id/edtId" />

    <EditText
        android:id="@+id/edtmodouso"
        android:layout_width="255dp"
        android:layout_height="100dp"
        android:background="@color/cinzaC"
        app:layout_constraintStart_toStartOf="@id/tvmodouso"
        app:layout_constraintTop_toBottomOf="@+id/tvmodouso" />

    <TextView
        android:id="@+id/tvmodouso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Modo de Uso:"
        android:textColor="@color/white"
        android:textSize="17sp"

        app:layout_constraintStart_toStartOf="@+id/edtfuncionalidade"
        app:layout_constraintTop_toBottomOf="@+id/edtfuncionalidade" />

    <Button
        android:id="@+id/btn_cadastrar_epi"
        android:layout_width="255dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/azul2"
        android:text="Cadastrar"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@+id/edtmodouso"
        app:layout_constraintTop_toBottomOf="@+id/edtmodouso" />

</androidx.constraintlayout.widget.ConstraintLayout>