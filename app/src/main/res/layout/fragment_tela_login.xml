<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza"
    tools:context=".view.TelaLogin"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="@color/black"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="87dp"
        android:layout_height="79dp"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_sem_fundo" />


    <TextView
        android:id="@+id/tvlogin"
        android:layout_width="94dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvlogin"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/tvcpf"
            android:layout_width="62dp"
            android:layout_height="28dp"
            android:text="CPF:"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edtcpf"
            android:layout_width="255dp"
            android:layout_height="45dp"
            android:background="@color/cinzaC"
            app:layout_constraintStart_toStartOf="@id/tvcpf"
            app:layout_constraintTop_toBottomOf="@+id/tvcpf" />

        <TextView
            android:id="@+id/tvsenha"
            android:layout_width="62dp"
            android:layout_height="28dp"
            android:text="Senha:"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="@+id/edtcpf"
            app:layout_constraintTop_toBottomOf="@+id/edtcpf"
            android:layout_marginTop="50dp"/>

        <EditText
            android:id="@+id/edtsenha"
            android:layout_width="255dp"
            android:layout_height="46dp"
            android:background="@color/cinzaC"
            android:ems="10"
            android:inputType="textPassword"
            app:layout_constraintStart_toStartOf="@+id/tvsenha"
            app:layout_constraintTop_toBottomOf="@+id/tvsenha" />

        <Button
            android:id="@+id/button3"
            android:layout_width="255dp"
            android:layout_height="48dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="@color/azul2"
            android:text="Logar"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtsenha" />

        <TextView
            android:id="@+id/tvfrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ainda nÃ£o tem uma conta ?"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/button3"
            app:layout_constraintStart_toStartOf="@id/button3"/>

        <TextView
            android:id="@+id/tvcriarconta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Criar conta"
            android:textColor="@color/azul3"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/tvfrase"
            app:layout_constraintTop_toBottomOf="@id/button3"
            android:layout_marginStart="15dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>