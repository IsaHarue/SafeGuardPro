<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="305dp"
        android:layout_height="105dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/roxo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="79dp"
                android:layout_height="68dp"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/vItensEPI3"
                app:layout_constraintStart_toStartOf="@+id/vItensEPI3"
                app:layout_constraintTop_toTopOf="@+id/vItensEPI3"
                app:layout_constraintVertical_bias="0.486"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tvItemEPI1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EPIs"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/vItensEPI4"
                app:layout_constraintEnd_toEndOf="@+id/vItensEPI4"
                app:layout_constraintStart_toEndOf="@+id/image4"
                app:layout_constraintTop_toTopOf="@+id/vItensEPI4" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>